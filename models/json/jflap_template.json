{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"additionalProperties": false,
	"title": "AutomataTranslator Struct - JFLAP template based by Allex Lima <https://github.com/allexlima>",
	"description": "Nondeterministic and Deterministic finite automata representation",
	"type": "object",
	"properties": {
		"structure": {
			"allOf": [
				{
					"properties": {
						"type": {
							"enum": [
								"AFN",
								"AFD",
								"fa"
							]
						}
					},
					"required": [
						"type"
					]
				}
			],
			"automaton": {
				"state": {
					"type": "object",
					"properties": {
						"id": {
							"type": "integer"
						},
						"name": {
							"type": "string"
						},
						"x": {
							"type": "integer"
						},
						"y": {
							"type": "integer"
						},
						"initial": {
							"type": ["boolean", "null"]
						},
						"final": {
							"type": ["boolean", "null"]
						}
					},
					"required": [
						"id",
						"name"
					]
				},
				"transition": {
					"type": "object",
					"properties": {
						"from": {
							"type": "integer"
						},
						"read": {
							"type": ["string", "integer", "numeric", "null"]
						},
						"to": {
							"type": "integer"
						}
					},
					"required": [
						"from",
						"read",
						"to"
					]
				}
			}
		}
	},
	"required": [
		"structure",
		"/automaton/state/name"
	]
}